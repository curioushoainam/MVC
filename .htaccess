RewriteEngine On

# trang dsSanpham
RewriteRule sanpham ?controller=sanpham&action=dsSanpham

	
# trang home
RewriteRule home sanpham?controller=hethong&action=home

# trang chi tiet
# RewriteRule (^[a-zA-Z0-9?=&]+)-([0-9]+$) ?controller=sanpham&action=chitiet&id=$2
# viết hàm để có thể tự động chuyển đổi pathname khi từ phía admin

RewriteRule (^[a-zA-Z0-9?=&]+)-([0-9]+)$ ?controller=sanpham&action=chitiet&id=$2&alias=$1
# where $1 is [a-zA-Z0-9?=&]+
# $2 is [0-9]+